source 'https://rubygems.org'

gem 'rails', '4.0.3'
gem 'thin'
gem 'faye'

# Assets
gem 'jquery-rails'
gem 'turbolinks'
gem 'sass-rails',   '~> 4.0.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.0.3'
gem 'bootstrap-sass'
gem 'therubyracer', require: 'v8'
gem 'yui-compressor'
